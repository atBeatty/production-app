<%= form_tag('/login', class: "vertical-flex login") do %>
    <%= label_tag 'email'  %>
    <%= text_field_tag 'email' %>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password' %>
    <%= submit_tag 'Login', class: "user-submit" %>
    
<% end %>
<% if current_user %>
  <h1><%= current_user.name %></h1>
  <h2>Email: <%= current_user.email %></h2>
  <h2>Github UID: <%= current_user.uid %></h2>
<% else %>
  <%= link_to('Log in with Github!', '/auth/github') %>
<% end %>

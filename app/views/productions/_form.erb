<%= form_for @production, :html => {:class => 'vertical-flex'} do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :contract %>
    <%= f.number_field :contract %>
    <%= f.label :client_name %>
    <%= f.text_field :client_name %>
    <%= f.label :producer %>
    <%= f.collection_select(:producer_id, @producers, :id, :name) %>
    <%= f.submit %>
<% end %>